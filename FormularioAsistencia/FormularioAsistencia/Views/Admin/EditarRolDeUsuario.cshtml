
@model List<UsuarioRolViewModel>

@{
    var Id = ViewBag.Id;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Añadir o Sacar un usuario de este rol.</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Nombre" />
                    <input asp-for="@Model[i].Seleccionado" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Seleccionado">
                        @Model[i].Nombre
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditarRol" asp-route-id="@Id"
               class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>
