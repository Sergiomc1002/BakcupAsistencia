@model FormularioAsistencia.Models.Asistencia_Disponible

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Asistencia</h1>

<form method="post" class="mt-3">

    <div class="form-group row">
        <input type="hidden" asp-for="IdAsistencia" />
        <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Nombre" class="form-control">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Profesor" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Profesor" class="form-control">
            <span asp-validation-for="Profesor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Grupos" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Grupos" class="form-control">
            <span asp-validation-for="Grupos" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-rol">
        Editar
    </button>
    <a class=" open-delete btn btn-rol btn-eliminar" data-toggle="modal" data-target=".bootstrapmodal" style="position: relative; float: right;">Eliminar Asistencia</a>
    <a asp-action="Index" class="btn btn-rol">Cancelar</a>
    <div asp-validation-summary="All" class="text-danger"></div>

</form>

<div class="modal fade bootstrapmodal" id="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-eliminar">
                <div class="modal-title"><h2><i class="fa fa-exclamation-triangle " aria-hidden="true"></i>  Eliminar Asistencia</h2></div>
                <button data-dismiss="modal" class="close"><span>&times</span></button>

            </div>
            <div class="modal-body modal-conteliminar">
                <h3>Está seguro que desea eliminar la asistencia  @Model.Nombre? Se eliminarán todas sus solicitudes asociadas.</h3>
            </div>
            <div class="modal-footer">
                <form method="post" asp-action="Delete"  asp-route-id="@Model.IdAsistencia">
                    <button type="submit" class="btn btn-eliminar">Eliminar Asistencia</button>

                    <button class="btn btn-rol" data-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>