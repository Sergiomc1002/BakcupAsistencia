@model VerAnunciosViewModel


@{
    ViewBag.Title = "Anuncios";
}
    <div class="text-center">
        <h1 class="display-4">
            Fechas Importantes
           
        </h1>
        <table class="table table-admin">
            <thead>
                <tr>
                    <th>
                        Fecha

                    </th>
                    <th>
                        Descripción
                    </th>
                    @if (User.IsInRole("Secretaría") || User.IsInRole("Administrativos"))
                    {
                        <th>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Anuncios)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Fecha)
                        </td>

                        <td>
                            @item.Descripcion
                        </td>
                        @if (User.IsInRole("Secretaría") || User.IsInRole("Administrativos"))
                        {
                            <td>
                                <a asp-action="Edit" asp-controller="Anuncio" asp-route-id="@item.Id" class="btn btn-link btn-sm"> Editar</a>

                                <a asp-action="Delete" asp-controller="Anuncio" asp-route-id="@item.Id" class="btn btn-link btn-sm"> Eliminar</a>
                            </td>
                        }

                    </tr>
                }
                @if (User.IsInRole("Secretaría") || User.IsInRole("Administrativos")) 
                {
                    <tr>
                        <td>

                            <a asp-action="Create" asp-controller="Anuncio"  class="btn btn-link btn-sm"> + Nuevo Anuncio</a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
